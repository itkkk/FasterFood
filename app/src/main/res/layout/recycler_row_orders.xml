<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewOrders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginLeft="@dimen/lateral_margin"
    android:layout_marginRight="@dimen/lateral_margin"
    android:layout_marginTop="@dimen/margin"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="@dimen/card_elevation"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgOrder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:src="@drawable/ic_image_broken"
            android:contentDescription="@string/contentDescLogo"/>

        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtNameOrder"
                style="@style/recyclerRowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtTotOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/recyclerSubTitle"/>

            <TextView
                android:id="@+id/txtStateOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/recyclerSubTitle"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:padding="@dimen/margin_other">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_edit_order" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>