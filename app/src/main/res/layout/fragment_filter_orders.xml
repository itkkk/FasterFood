
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView2"
    android:layout_gravity="right">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:context=".orders_screen.OrdersFragment">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/state_Filter"
            android:id="@+id/textView2"
            style="@style/filter_title"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_other"
            android:paddingBottom="@dimen/margin_other"
            android:id="@+id/radio1">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_filter"
                android:id="@+id/radio1no"
                android:orientation="vertical"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_state"
                android:id="@+id/radio1open" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/closed_state"
                android:id="@+id/radio1closed" />
        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/chain_Filter"
            android:id="@+id/textView3"
            style="@style/filter_title"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_other"
            android:id="@+id/radio2">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_filter"
                android:id="@+id/radio2no"
                android:orientation="vertical"
                android:checked="true"/>

        </RadioGroup>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/filter_btn"
            android:id="@+id/filter_btn"
            android:padding="@dimen/margin_other"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>